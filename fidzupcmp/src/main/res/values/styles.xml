<resources>

    <!-- Base application theme. -->
    <style name="CMPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <!-- <item name="colorPrimary">@color/fidzup_blue</item> -->

        <!-- colorPrimaryDark is used for the status bar -->
        <!--<item name="colorPrimaryDark">@color/my_awesome_darker_color</item>-->

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/fidzup_blue</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <!--
        <item name ="android:windowBackground">@color/fidzup_blue</item>
        <item name ="android:colorBackground">@color/fidzup_blue</item>
        -->
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="RecyclerView" parent="Widget.AppCompat.ListView">
        <item name="android:listDivider">@drawable/line_divider</item>
    </style>

    <style name="BigText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/big_text</item>
    </style>

    <style name="VendorsLink" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/fidzup_blue</item>
    </style>

    <style name="ConsentButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/main_button_bg</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="ConsentButtonDisabled" parent="ConsentButton">
        <item name="android:background">@color/disabled_button_bg</item>
    </style>

</resources>
